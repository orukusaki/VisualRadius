{
    "name":        "orukusaki/visualradius",
    "description": "Visual Radius",
    "keywords":    ["visual", "radius"],
    "homepage":    "https://github.com/orukusaki/VisualRadius",
    "license":     "MIT",
    "authors":[
        {
            "name" : "Peter Smith",
            "email": "peter@orukusaki.co.uk"
        }
    ],
    "require":{
        "php"                             : ">=5.3.2",
        "friendsofsymfony/rest"           : ">0",
        "igorw/config-service-provider"   : "1.2.*",
        "twig/twig"                       : "1.6.0",
        "silex/silex"                     : "1.0.*@dev",
        "doctrine/mongodb-odm": "dev-master",
        "docteurklein/silex-doctrine-service-providers": "dev-master",
        "sanpi/twitter-bootstrap-installer": "*@dev"
    },

    "require-dev":{
        "behat/behat": "2.4.*@stable",
        "behat/mink": "1.4.*@stable",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*"
    },

    "config": {
        "bin-dir": "bin/"
    },

    "minimum-stability": "dev",
    "suggest":{},
    "autoload":{
        "psr-0":{
            "Orukusaki": "src/"
        }
    },

    "scripts": {
        "post-install-cmd": [
            "Orukusaki\\VisualRadius\\Installer::postInstall",
            "Sanpi\\TwitterBootstrap\\Composer\\ScriptHandler::postInstall"
        ],
    	"post-update-cmd": [
            "Orukusaki\\VisualRadius\\Installer::postUpdate",
            "Sanpi\\TwitterBootstrap\\Composer\\ScriptHandler::postInstall"
        ]
    },
    "extra": {
        "symfony-web-dir": "public/assets",
        "resources" : {
            "resources/js" : "js",
            "resources/css": "css",
            "resources/img": "img"
        }
    }
}
