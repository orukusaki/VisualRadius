    <script src="{{root}}assets/js/jquery.js"></script>
    <script src="{{root}}assets/js/bootstrap-transition.js"></script>
    <script src="{{root}}assets/js/bootstrap-alert.js"></script>
    <script src="{{root}}assets/js/bootstrap-modal.js"></script>
    <script src="{{root}}assets/js/bootstrap-dropdown.js"></script>
    <script src="{{root}}assets/js/bootstrap-scrollspy.js"></script>
    <script src="{{root}}assets/js/bootstrap-tab.js"></script>
    <script src="{{root}}assets/js/bootstrap-tooltip.js"></script>
    <script src="{{root}}assets/js/bootstrap-popover.js"></script>
    <script src="{{root}}assets/js/bootstrap-button.js"></script>
    <script src="{{root}}assets/js/bootstrap-collapse.js"></script>
    <script src="{{root}}assets/js/bootstrap-carousel.js"></script>
    <script src="{{root}}assets/js/bootstrap-typeahead.js"></script>
 !-->

  </body>
</html>
